{
  "info": {
    "name": "Service Desk Smoke",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Healthz",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/healthz",
          "host": ["{{baseUrl}}"],
          "path": ["healthz"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"status 200\", function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "pm.test(\"body has ok\", function () {",
              "  var jsonData = pm.response.json();",
              "  pm.expect(jsonData.status).to.eql(\"ok\");",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Create ticket",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Printer issue\",\n  \"description\": \"printer is broken\",\n  \"status\": \"new\",\n  \"priority\": \"medium\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/ticket",
          "host": ["{{baseUrl}}"],
          "path": ["ticket"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"status 200\", function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "pm.test(\"has id\", function () {",
              "  var jsonData = pm.response.json();",
              "  pm.expect(jsonData.id).to.exist;",
              "  pm.expect(jsonData.created_at).to.exist;",
              "  pm.expect(jsonData.title).to.eql(\"Printer issue\");",
              "  pm.expect(jsonData.description).to.eql(\"printer is broken\");",
              "  pm.expect(jsonData.status).to.eql(\"new\");",
              "  pm.expect(jsonData.priority).to.eql(\"medium\");",
              "});",
              "pm.environment.set(\"ticketId\", pm.response.json().id);"
            ]
          }
        }
      ]
    },
    {
      "name": "List tickets",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/tickets",
          "host": ["{{baseUrl}}"],
          "path": ["tickets"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"status 200\", function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "pm.test(\"contains created ticket\", function () {",
              "  var jsonData = pm.response.json();",
              "  var ids = jsonData.map(function (item) { return item.id; });",
              "  pm.expect(ids).to.include(pm.environment.get(\"ticketId\"));",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Get ticket by id",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/tickets/{{ticketId}}",
          "host": ["{{baseUrl}}"],
          "path": ["tickets", "{{ticketId}}"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"status 200\", function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "pm.test(\"id matches\", function () {",
              "  var jsonData = pm.response.json();",
              "  pm.expect(jsonData.id).to.eql(pm.environment.get(\"ticketId\"));",
              "  pm.expect(jsonData.title).to.eql(\"Printer issue\");",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Update ticket",
      "request": {
        "method": "PUT",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Printer issue (fixed)\",\n  \"description\": \"printer fixed\",\n  \"status\": \"done\",\n  \"priority\": \"low\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/tickets/{{ticketId}}",
          "host": ["{{baseUrl}}"],
          "path": ["tickets", "{{ticketId}}"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"status 200\", function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "pm.test(\"updated fields\", function () {",
              "  var jsonData = pm.response.json();",
              "  pm.expect(jsonData.description).to.eql(\"printer fixed\");",
              "  pm.expect(jsonData.status).to.eql(\"done\");",
              "  pm.expect(jsonData.priority).to.eql(\"low\");",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Delete ticket",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/tickets/{{ticketId}}",
          "host": ["{{baseUrl}}"],
          "path": ["tickets", "{{ticketId}}"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test(\"status 200\", function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "pm.test(\"delete response\", function () {",
              "  var jsonData = pm.response.json();",
              "  pm.expect(jsonData.id).to.eql(pm.environment.get(\"ticketId\"));",
              "  pm.expect(jsonData.message).to.eql(\"Ticket deleted\");",
              "});"
            ]
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000"
    }
  ]
}
